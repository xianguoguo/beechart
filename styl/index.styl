@import "public.styl"

.content
    w1000()
    .primary
        padding:30px 0 15px 0
        .banner
            position: relative
            a
                display:block
                img
                    display:block
            .banner-footer
                height:80px
                background:url("../img/assets.png") no-repeat 0px -1050px
            .biaoqian
                position:absolute
                left:-3px
                top:-3px
                width:110px
                height:110px
                background:url("../img/assets.png") no-repeat 0px -900px
        .infos
            width: 400px
            margin-left:100px
            .forfree
                width:350px
                height:102px
                background:url("../img/assets.png") no-repeat 0px -440px
                text-indent:-9999px
                margin-left:-50px
            .intro
                color:#95c7ef
                margin-top:20px
            .more
                margin-top:5px
                a
                    color:#FFFFFF
                    font-size:14px
                    padding-right:32px
                    background: url("../img/assets.png") no-repeat  80px -617px
            .download
                margin-left:-30px
                padding-top:50px
                li
                    float: left
                    a
                        width:128px
                        height:75px
                        display: block
                        color:#FFFFFF
                        padding-left:50px
                        padding-top:10px
                        &:hover
                            text-decoration: none
                        .title
                            font-size:20px
                            font-weight:bold
                .download_link
                    background: url("../img/assets.png") no-repeat 0px -336px
                .demo_link
                    margin-left:40px
                    background: url("../img/assets.png") no-repeat -215px -336px
            .news
                margin-top:25px
                .new
                    padding-right:25px
                    background: url("../img/assets.png") no-repeat 240px -573px
                    display: inline
    .second
        padding:15px 0 10px 0
        li
            float:left
            width:170px
            margin-right:80px
            font-size:12px
            .title
                margin-top:20px
                color:#3e7db0
                font-weight:bold
            .intro
                color:#8198a2

    .third
        padding:15px 0 10px 0
        .title
            font-weight:bold
            color: #444444
        .github
            background: url("../img/github.png") no-repeat
            height:60px
            margin-top:25px
            padding-left:150px
            p
                color:#8198a2
            a
                color:#3e7db0