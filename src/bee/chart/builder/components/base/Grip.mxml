<?xml version="1.0" encoding="utf-8"?>
<!--
     具有隐藏\展开工具栏功能的组件
-->
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
                      xmlns:s="library://ns.adobe.com/flex/spark"
                      xmlns:mx="library://ns.adobe.com/flex/mx"
                      currentState="normal"
                      creationComplete="bordercontainer1_creationCompleteHandler(event)"
                      xmlns:base="cn.alibaba.yid.chart.builder.components.base.*">
    <s:layout>
        <s:HorizontalLayout id="thisLayout"
                            gap.normal="3"
                            gap.mini="0"/>
    </s:layout>
    <s:states>
        <s:State name="normal"/>
        <s:State name="mini"/>
    </s:states>
    <!--状态转换时的效果-->
    <s:transitions>
        <s:Transition fromState="normal"
                      toState="mini">
            <s:Sequence targets="{[actionBtn,leftGroup,leftChildGroup,rightChildGroup]}">
                <s:Parallel duration="500">
                    <s:Move/>
                    <s:Resize/>
                </s:Parallel>
                <s:SetAction target="{leftChildGroup}"
                             property="visible"/>
                <s:SetAction target="{leftChildGroup}"
                             property="includeInLayout"/>
                <s:SetAction targets="{[actionBtn,leftGroup,leftChildGroup,rightChildGroup]}"
                             property="width"/>
            </s:Sequence>
        </s:Transition>
        <s:Transition fromState="mini"
                      toState="normal">
            <s:Parallel targets="{[leftGroup,leftChildGroup,rightChildGroup]}"
                        duration="500">
                <s:Move/>
                <s:Resize/>
            </s:Parallel>
        </s:Transition>
    </s:transitions>
    <fx:Script>
        <![CDATA[
            import mx.core.UIComponent;
            import mx.events.FlexEvent;
            public var leftChild:UIComponent;
            public var rightChild:UIComponent;
            
            protected function bordercontainer1_creationCompleteHandler(event:FlexEvent):void
            {
                if (leftChild)
                {
                    leftChildGroup.addElement(leftChild);
                }
                if (rightChild)
                {
                    rightChildGroup.addElement(rightChild);
                }
            }
            
            protected function button1_clickHandler(event:MouseEvent):void
            {
                currentState = (currentState == "normal" ? "mini" : "normal");
            }
        ]]>
    </fx:Script>

    <fx:Declarations>
        <!-- 将非可视元素（例如服务、值对象）放在此处 -->
    </fx:Declarations>
    <!--左半部分组件容器-->
    <s:Group id="leftGroup"
             width.normal="30%"
             width.mini="1%"
             height="100%">
        <s:layout>
            <s:HorizontalLayout id="leftGroupLayout"
                                gap.normal="3"
                                gap.mini="0">
            </s:HorizontalLayout>
        </s:layout>
        <!--工具栏-->
        <s:Group id="leftChildGroup"
                 width.normal="99%"
                 width.mini="0"
                 height="100%"
                 visible.mini="false"
                 includeInLayout.mini="false">
        </s:Group>
        <!--切换按钮-->
        <s:ToggleButton id="actionBtn"
                        minHeight="0"
                        minWidth="0"
                        width.normal="1%"
                        width.mini="100%"
                        height="100%"
                        buttonMode="true"
                        toolTip.normal="隐藏工具栏"
                        toolTip.mini="展开工具栏"
                        skinClass="cn.alibaba.yid.chart.builder.skins.CustomToggleBtnSkin"
                        click="button1_clickHandler(event)">
        </s:ToggleButton>
    </s:Group>
    <!--右半部分组件容器-->
    <s:Group id="rightChildGroup"
             width.normal="70%"
             width.mini="99%"
             height="100%">
    </s:Group>
</s:Group>
